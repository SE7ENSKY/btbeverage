.product-params
	height 0
	overflow hidden
	&__text
		z-index 1
		line-height 1.4
		color brandColor
		background-color #dfeada
		@media tablet_desktop
			padding 40px 70px
			font-size 16px
		@media phone
			padding 30px 20px
			font-size 14px
	&__title
		display flex
		align-items center
		text-transform uppercase
		font-size 12px
		line-height 1.5
		white-space pre-line
		@media tablet_desktop
			width 130px
			font-size 12px
		@media phone
			width 80px
			font-size 10px
	&__inner
		display flex
		color #fff
		@media tablet_desktop
			padding 60px 70px
		@media phone
			padding 35px 20px
	&__list
		display flex
		align-items center
	&__item
		font-size 30px
		line-height 1.1
		font-weight bold
		cursor pointer
		opacity 0.2
		transition opacity 0.15s ease-in-out
		@media tablet_desktop
			margin-right 70px
			font-size 30px
		@media phone
			margin-right 35px
			font-size 20px
		&.active
			opacity 1
		&:not(.active):hover
			opacity 0.6
	&__volume
		z-index 2
		background-color #78A965
	&__packs
		z-index 3
		background-color #679E51
		&-dots
			display flex
			flex-wrap wrap
			width 53px
		&-dot
			width 7px
			height 7px
			margin 3px
			background-color #fff
			border-radius 50%
			&.disabled
				opacity 0.2
	&__cart
		color #fff
		text-transform uppercase
		background-color #56943E
		z-index 4
		&-inner
			display flex
		&-total
		&-button
			transition width 0.5s ease-in-out, padding-left 0.5s ease-in-out
		&-total
			display flex
			width 60%
			padding 60px 0 60px 70px
			opacity 1
			visibility visible
			@media tablet_desktop
				padding 60px 0 60px 70px
			@media phone
				padding 35px 0 35px 20px
			&-value
				line-height 1.1
				font-weight bold
				@media tablet_desktop
					font-size 30px
				@media phone
					font-size 20px
		&-button
			width 40%
			text-align center
			line-height 1.15
			font-weight bold
			background-color #4B8834
			cursor pointer
			@media tablet_desktop
				padding 70px 0
				font-size 14px
			@media phone
				padding 40px 0
				font-size 12px
		&.added
			.product-params
				&__cart
					&-total
						width 0
						padding 0
						opacity 0
					&-button
						width 100%
						background-color #315423
