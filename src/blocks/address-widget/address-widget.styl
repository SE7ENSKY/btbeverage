.address-widget
	display flex
	width 525px
	margin 0 auto 50px
	min-height 140px
	background-color #dfeada
	&__content
		flex-grow 1
		padding 20px
		font-size 12px
		line-height 1.666
		color brandColor
		text-transform uppercase
	&__buttons
		flex-shrink 0
		display flex
		flex-direction column
		width 150px
	&__button
		display flex
		align-items center
		justify-content center
		height 50%
		min-height 70px
		&_edit
			background-color #56943e
		&_delete
			background-color #679e51
		&:hover
		&:active
			background lighten(brandColor, 10%)