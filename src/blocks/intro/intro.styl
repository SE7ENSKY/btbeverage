.intro
	position relative
	overflow hidden
	height 100vh
	min-height 650px
	&__wrap
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		video
			object-fit cover
			.no-objectfit &
				position absolute
				top 50%
				left 50%
				width auto !important
				height auto !important
				min-width 100%
				min-height 100%
				transform translate(-50%, -50%)
	&__footer
		position absolute
		left 0
		right 0
		bottom 20px
		text-align center
	&__more
		display inline-block
		text-transform uppercase
		width 100%
		height 1.2em
		text
			font-size 10px
			text-anchor middle
	&__logo
		position absolute
		top 50%
		left 50%
		margin -191px 0 0 -113px
		width 226px
		height 383px
		&-image
			display block
			width 100%
			height 100%
		&-s
			fill #fff
	&__preloader
		position fixed
		height 100%
		left 0
		bottom 0
		right 0
		background url(img("green-texture.jpg")) repeat center center brandColor
