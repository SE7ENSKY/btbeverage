@import 'typo.styl'
@import 'helpers.styl'
@import 'buttons.styl'
@import 'forms.styl'
@import 'grid.styl'

*
	font-smoothing antialiased
	box-sizing border-box
	&:before
	&:after
		box-sizing border-box

html
body
	margin 0
	padding 0
	height 100%

body
	position relative
	font-family mainFont
	font-size 16px
	line-height 1.5
	color siteColor
	background linear-gradient(to right, #deead9 0%,#fbfcfa 35%,#fbfcfa 50%,#fbfcfa 65%,#deead9 100%);
