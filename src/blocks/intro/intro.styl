.intro
	position relative
	overflow hidden
	height 100vh
	&__wrap
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		video
			object-fit cover
			.no-objectfit &
				position absolute
				top 50%
				left 50%
				width auto !important
				height auto !important
				min-width 100%
				min-height 100%
				transform translate(-50%, -50%)