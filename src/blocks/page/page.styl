.page
	&__cover
		position relative
		display flex
		margin-bottom 40px
		@media tablet_desktop
			align-items flex-end
			height calc(100vh - 80px)
			min-height 650px
		@media phone
			padding-top 66vw
		&-bg
			position absolute
			top 0
			right 0
			left 0
			background-size cover
			background-repeat no-repeat
			background-position center center
			@media tablet_desktop
				bottom 0
			@media phone
				height 66vw
		&-wrap
			position relative
			@media tablet_desktop
				margin-bottom -40px
				padding-right 35%
			&:before
				content ""
				position absolute
				top 0
				bottom 0
				background url(i("green-texture.jpg")) repeat center center brandColor
				@media tablet_desktop
					right 35%
					left 50%
					margin-left -50vw
				@media phone
					right -20px
					left -20px
		&-content
			position relative
			color #fff
			@media tablet_desktop
				padding 60px 100px 50px 0
			@media phone
				padding 30px 0 40px
		&-title
			margin-bottom 35px
			@media phone
				font-size 20px
				margin-bottom 20px
		&-text
			margin-bottom 20px
			font-size 14px
			line-height 1.57
			color #dfeada
		&-date
			font-size 12px
			color #9dc78d
			text-transform uppercase
	&__title
		margin-bottom 55px
		color brandColor
		text-align center
		&_bottom-offset-sm
			margin-bottom 35px
	&__subtitle
		margin-bottom 65px
		font-size 18px
		color brandColor
		text-align center
	&__content
		padding-top 100px
	&__footer
		margin-top 80px
		text-align center
	&__back
		min-width 210px
	
	&_checkout
		.page
			&__content
				display flex
				padding-top 0
			&__body
				display flex
				justify-content flex-end
				width 63%
				padding 65px 100px 0 0
				&-inner
					width 630px
			&__aside
				width 37%
				padding-top 185px
				background-color #dfeada
	&_about
		.page
			&__content
				@media phone
					padding-top 0

