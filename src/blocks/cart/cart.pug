if list
	+e.list
		each item in list
			+e.list-item
				+e.product
					+e.product-image(style=`background-image:url("${item.image}");`)
						if item.title
							+e.product-title!= item.title
					+e.product-content
						if item.list
							each subitem in item.list
								+e.product-row
									if subitem.title
										+e.product-info!= subitem.title
									if subitem.price
										+e.product-price!= subitem.price
									+e.controls
										+e.controls-item._plus
										+e.controls-item._minus



+e.total
	+e.total-label Your Total
	+e.total-value $ 280.00

unless hidePayments
	+e.payments
		+e.payments-item
			+e.payments-label Checkout
		+e.payments-item
			+e("a").payments-link(href="/")
				+e("img").payments-icon(src=img("amazon-pay.svg"), alt="" width="101" height="21")
		+e.payments-item
			+e("a").payments-link(href="/")
				+e("img").payments-icon(src=img("paypal.svg"), alt="" width="91" height="23")