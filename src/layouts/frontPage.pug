extends main

append params
	- headerDefault = false
	- headerMod = "header_simple"

block main
	+b.intro: +i({
		poster: "/assets/i/intro-cover.jpg",
		mp4: "#"
	})
	//- mp4: "http://tmp.static.se7enapp.com/bdsl/main.mp4"

	+b.about: +i({
		bottleSeq: file.bottleSeq 
	})

	+b.media-widget._oriented-right: +i({
		title: "b-healthy",
		mainImage: "/assets/i/media-img-1.jpg",
		addImage: "/assets/i/media-img-sm-1.jpg"
	})

	+b.media-widget._oriented-left: +i({
		title: "b-active",
		mainImage: "/assets/i/media-img-2.jpg",
		addImageMask: true
	})

	+b.media-widget._simple._offset-bottom: +i({
		title: "b-tea",
		mainImage: "/assets/i/media-img-3.jpg",
		hideAddImage: true,
		bottle: "/assets/i/bottle.png"
	})

	.container
		+b.content-heading: +i({
			title: "<span>Choose</span> <br><span>your flavor</span>",
			text: "<p>Each flavor is crisp, refreshing and fully satisfying.</p><p>Naturally!</p>"
		})

	+b.catalog#catalog: +i({ list: catalog })
	
	+b.taste-button: +i({})
