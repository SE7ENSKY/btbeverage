.cart
	flex 1
	background-color #dfeada
	.page_checkout &
		@media desktop
			max-width 575px
	&_static
		.cart__product
			&-content
				padding-right 20px
			&-row
				@media tablet_desktop
					padding-right 50px
				@media phone
					padding-right 0
	&__list
		&-item
			@media tablet_desktop
				&:nth-child(odd)
					background-color #78a965
				&:nth-child(even)
					background-color #679e51
				&:nth-child(3n)
					background-color #56943e
			@media phone
				background-color #78a965
	&__product
		@media tablet_desktop
			display flex
		&-image
			position relative
			flex-shrink 0
			display flex
			align-items center
			justify-content center
			padding 20px
			background-size cover
			background-repeat no-repeat
			background-position center center
			@media tablet_desktop
				width 210px
			@media phone
				min-height 100px
			&:before
				content ""
				position absolute
				top 0
				right 0
				bottom 0
				left 0
				background-color rgba(0,0,0,.5)
		&-content
			flex-grow 1
			@media tablet_desktop
				padding 40px 0 40px 50px
			@media phone
				padding-left 20px
		&-title
			position relative
			font-size 14px
			line-height 1.285
			color #fff
			font-weight bold
			text-transform uppercase
			letter-spacing 2pt
			text-align center
		&-row
			position relative
			font-size 14px
			line-height 1.57
			text-transform uppercase
			color #fff
			@media tablet_desktop
				padding 12px 90px 12px 0
			@media phone
				padding 19px 60px 19px 0
				text-align center
			&:hover
				.no-touchevents &
					.cart__controls
						visibility visible
						opacity 1
		&-price
			font-weight bold
	&__controls
		position absolute
		right 0
		display flex
		transition .2s opacity ease-in-out
		@media tablet_desktop
			width 80px
			top 12px
		@media phone
			width 40px
			top 0
			bottom 0
			flex-direction column
		.no-touchevents &
			opacity 0
			visibility hidden
		&-item
			position relative
			height 40px
			user-select none
			cursor pointer
			transition .2s background-color ease-in-out
			@media tablet_desktop
				width 50%
			@media phone
				width 100%
				height 50%
			&:before
			&:after
				position absolute
				top 50%
				left 50%
				content ""
				background-color brandColor
				transform translate(-50%,-50%)
				transition .2s background-color ease-in-out
			&:before
				width 8px
				height 2px
			&_plus
				background-color #fff
				&:after
					width 2px
					height 8px
			&_minus
				background-color #dfeada
				&:before
					width 6px
				&:after
					content none
			&:hover
				background-color #397323
				&:before
				&:after
					background-color #fff
	&__total
		display flex
		justify-content center
		padding 37px 30px 38px
		background-color #56943e
		color #fff
		text-align center
		font-weight bold
		white-space nowrap
		@media phone
			padding-left 20px
			padding-right @padding-left
		&-label
			margin 15px 15px 0 0
			text-transform uppercase
			@media tablet_desktop
				font-size 14px
			@media phone
				font-size 13px
		&-value
			@media tablet_desktop
				font-size 30px
			@media phone
				font-size 26px
	&__payments
		display flex
		width 100%
		background-color #4b8834
		transition background-color .2s ease-in-out
		@media tablet_desktop
			height 120px
		@media phone
			height 100px
		&:hover
			background-color #315423
		&-label
			display flex
			width 100%
			padding-bottom 3px
			align-items center
			justify-content center
			font-size 30px
			line-height 1.1
			font-weight bold
			color #fff
			text-transform uppercase
			cursor pointer
			@media tablet_desktop
				font-size 30px
			@media phone
				font-size 28px
		&-icon
			max-width 100%
			max-height 100%
		&-link
			width 100%
			padding 10px
			display flex
			align-items center
			justify-content center
			text-decoration none
	&__prices
		background-color #56943e
		font-size 14px
		color #fff
		font-weight bold
		@media tablet_desktop
			padding 45px 60px
		@media phone
			padding 45px 20px
		&-item
			display flex
			margin-bottom 8px
			&:last-child
				margin-bottom 0
		&-label
			flex-shrink 0
			text-transform uppercase
			@media tablet_desktop
				width 130px
			@media phone
				width 50%
		&-value
			text-align right
			@media tablet_desktop
				width 135px
			@media phone
				width 50%
	&__empty
		display none
		@media tablet_desktop
			padding 100px
		@media phone
			padding 20px 55px 0
		&-title
			font-weight bold
			text-align center
			text-transform uppercase
			color brandColor
			@media tablet_desktop
				margin-bottom 40px
				font-size 48px
				line-height 1.1
			@media phone
				margin-bottom 30px
				font-size 28px
				line-height 1.2
		&-content
			@media tablet_desktop
				padding 0 50px
		&-item
			margin-bottom 30px
		&-message
			margin-bottom 20px
			text-align center
			font-size 16px
			line-height 1.5
			font-weight 300
		&-link
			width 100%

	&.empty-cart
		.cart
			&__prices
			&__total
			&__payments
				display none
			&__empty
				display block
