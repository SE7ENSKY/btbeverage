.about
	@media tablet_desktop
		margin-bottom 80px
	&__inner
		@media tablet_desktop
			padding-top 140px
		@media tablet
			width 100%!important
		@media phone
			padding-top 60px
	&__title
		font-size calc(1rem + 4vw)
		line-height 1.2
		color brandColor
		text-align center
		text-transform uppercase
		@media tablet_desktop
			margin 0 0 90px
		@media phone
			margin 0 0 30px
		&-row
			display block
			position relative
			&_1
			&_3
				@media tablet_desktop
					z-index 1
				@media phone
					z-index 7
			&_2
				z-index 7
		&-image
			display none
			position fixed
			top 50vh
			left 50%
			margin-top 5px
			margin-left 17px
			z-index 6
			width 160px
			height 90px
			transform translate(-50%, -100%) rotate(5deg)
			@media (max-height: 420px)
				top 330px
	&__text
		margin 0 auto
		font-size 16px
		line-height 1.4
		color brandColor
		text-align center
		@media tablet_desktop
			width 65%
			font-size 16px
		@media phone
			width 100%
			font-size 14px
		p
			margin 0
	&__list
		position relative
		display flex
		flex-wrap wrap

		&.first
			@media tablet_desktop
				margin-top 450px
			@media phone, (orientation: portrait)
				margin-top 160px
		@media tablet_desktop
			justify-content space-around
		@media phone, (orientation: portrait)
			justify-content space-between
			margin-left -20px
			margin-right -20px
		&-item
			text-align center
			@media tablet_desktop
				flex 1
				max-width 33%
				margin-bottom 110px
			@media desktop
				&_second-item
					transform translateX(-20px)
			@media phone
				margin-bottom 45px
				width 38%
		&-image
			width 65px
			height @width
			display flex
			align-items center
			justify-content center
			margin 0 auto 15px
			will-change transform
			&-i
				max-width 100%
				max-height @max-width
		&-separator
			width calc(60.625vh - 250px)
			min-height 1px
			@media tablet
				width calc(60.625vh - 50px)
			@media phone, (orientation: portrait)
				display none
		&-title
			font-size 18px
			line-height 1.3
			color brandColor
			font-weight bold
			@media tablet
				width 66%
				margin 0 auto
			@media phone
				display none
	&__bottle
		position absolute
		top -120px
		left 50%
		transform translateX(-50%)
		z-index 7
		@media phone
			width 120px
		&-i
			display none
			@media phone, (orientation: portrait)
				display block
			max-width 100%
			max-height @max-width
