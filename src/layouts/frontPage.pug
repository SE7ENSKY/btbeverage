extends main

append params
	- headerMod = "header_simple"

block main
	+b.intro: +i({
		poster: "/assets/img/intro-cover.jpg",
		mp4: "#"
	})
	//- mp4: "http://tmp.static.se7enapp.com/bdsl/main.mp4"

	+b.about: +i

	+b.media-widget._oriented-right: +i({
		title: "b-healthy",
		mainImage: "/assets/img/media-img-1.jpg",
		addImage: "/assets/img/media-img-sm-1.jpg"
	})

	+b.media-widget._oriented-left._offset-bottom: +i({
		title: "b-active",
		mainImage: "/assets/img/media-img-2.jpg",
		addImageMask: true
	})

	+b.media-widget._simple._offset-bottom: +i({
		title: "b-tea",
		mainImage: "/assets/img/media-img-3.jpg",
		hideAddImage: true,
		bottle: "/assets/img/bottle.png"
	})

	.container
		+b.content-heading: +i({
			title: "Choose <br>your flavor",
			text: "<p>Each flavor is crisp, refreshing and fully satisfying.</p><p>Naturally!</p>"
		})

	+b.catalog: +i({ data: catalog })






