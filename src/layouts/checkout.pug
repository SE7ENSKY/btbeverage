extends page

append params
	- bodyMod = "bg-white"
	- pageMod = "_checkout"

block pageMain
	.page__body
		.page__body-inner
			if file.title
				h1.page__title.page__title_bottom-offset-sm!= file.title
			if file.nav
				+b.steps-list: +i({ data: file.nav })
			case file.step
				when "1"
					form
						fieldset
							.form-section
								.form-section-header
									.form-section-title Customer information
									.form-section-info Already have an account? <a href="#login-modal" data-toggle="modal" class="form-link"><strong>Log in</strong></a>
								.row
									.col-8
										.form-group.has-error
											input.form-control(type="email" placeholder="Email")
											.error-message Please enter a valid email address.
							.form-section
								.form-section-title Shipping address
								.row
									.col-6
										.form-group
											input.form-control(type="text" placeholder="First name")
									.col-6
										.form-group
											input.form-control(type="text" placeholder="Second name")
								.row
									.col-8
										.form-group
											input.form-control(type="text" placeholder="Address")
									.col-4
										.form-group
											input.form-control(type="text" placeholder="Apt, suite, etc.")
								.row
									.col-8
										.form-group
											input.form-control(type="text" placeholder="City")
								.row
									.col-4
										.form-group
											input.form-control(type="text" placeholder="Country")
									.col-4
										.form-group
											input.form-control(type="text" placeholder="State")
									.col-4
										.form-group
											input.form-control(type="text" placeholder="Zip code")
								.row
									.col-8
										.form-group
											input.form-control(type="tel" placeholder="Phone (Optional)")
							button.btn(type="submit") Continue to shipping method
				when "2"
					form
						fieldset
							.form-section
								.form-section-header
									.form-section-title Shipping Address
									.form-section-info
										a.form-link(href="/checkout-page-1.html") <strong>Edit</strong>
								.row
									.col-12
										.form-section-summary!= file.shippingAddress
							.form-section
								.form-section-header
									.form-section-title Delivery
								.row
									.col-12
										.form-checkbox-group
											each delivery, index in file.deliveryList
												.form-checkbox-row
													.radio
														- id = "delivery-" + index
														label(for=id)
															input(id=id name="delivery" value=delivery.slug)
															span= delivery.title
													.form-price= delivery.price
						.form-footer.form-footer_nav
							button.btn(type="submit") Continue to payment method
							a.form-footer-link.form-link(href="/") Return to customer info
				when "3"
					form
						fieldset
							.form-section
								.form-section-header
									.form-section-title Payment Method
								.row
									.col-12
										.form-checkbox-group
											.form-checkbox-row
												.radio
													label(for="payment-1")
														input(id="payment-1" name="payment" value="same" checked="checked")
														span
															.form-payment
																.form-payment-text Credit card
																img.form-payment-info(src=img('cards.png') height="25")
											.row
												.col-9
													.form-group
														input.form-control(type="text" placeholder="First name")
											.row
												.col-6
													.form-group
														input.form-control(type="text" placeholder="First name")
												.col-3
													.form-group
														input.form-control(type="text" placeholder="MM/YY")
												.col-3
													.form-group
														input.form-control(type="text" placeholder="CVV")
											.form-checkbox-separator
											.form-checkbox-row
												.radio
													label(for="payment-2")
														input(id="payment-2" name="payment" value="other")
														span
															img.form-payment(src=img("paypal-logo.png") width="90" height="25")
							.form-section
								.form-section-header
									.form-section-title Billing address
								.row
									.col-12
										.form-checkbox-group
											.form-checkbox-row
												.radio
													label(for="billing-1")
														input(id="billing-1" name="billing" value="same")
														span Same as shipping address
											.form-checkbox-row
												.radio
													label(for="billing-2")
														input(id="billing-2" name="billing" value="other")
														span Use a different billing address
						.form-footer.form-footer_nav
							button.btn(type="submit") Complete order
							a.form-footer-link.form-link(href="/") Return to shipping method
	.page__aside
		+b.cart: +i({ list: cartProducts, hidePayments: true })
