.payment-chooser
	border 2px solid #d5e4d0
	&__item
		padding 30px 20px
		border-bottom 2px solid #d5e4d0
		&.active
			.payment-chooser__item-wrap
				display block
		&-header
			margin-bottom 0
		&-wrap
			display none
			padding-top 20px
		&:last-child
			border-bottom 0 none
	&__panel
		display flex !important
		&-label
			margin-right 30px
		&-icons
			height 25px
			margin-top -5px