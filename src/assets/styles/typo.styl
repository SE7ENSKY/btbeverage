h1, h2, h3, h4, h5, h6
	font-weight bold
	text-transform uppercase

h1
	margin 0 0 35px
	font-size 48px
	line-height 1.1
	@media phone
		font-size 28px
		line-height 1.2
h2
	margin 0 0 20px
	font-size 30px
	@media phone
		font-size 24px
h3
	margin 0 0 15px
	font-size 20px
h4
	margin 0 0 15px
	font-size 18px
h5
	margin 0 0 15px
	font-size 16px
h6
	margin 0 0 15px
	font-size 14px

p
	margin 0 0 25px

a
	transition .2s color ease-in-out
	&:focus
		outline none

small
	font-size 75%

blockquote
	border 6px solid #dfeada
	text-transform uppercase
	color brandColor
	font-weight bold
	@media tablet_desktop
		margin 60px 0
		padding 60px
		font-size 48px
		line-height 1.1
	@media phone
		margin 30px 0
		padding 25px
		font-size 20px
		line-height 1.25
	.slim-wrap &
		@media tablet_desktop
			margin-left -17%
			margin-right @margin-left
			padding-left calc(17% - 6px)
			padding-right @padding-left
		@media phone
			padding-left 15px
			padding-right @padding-left

code
	display inline-block
	margin-bottom 3px
	font-family Menlo, Monaco, Consolas, "Courier New", monospace
	padding 3px 5px
	font-size 80%
	color #fff
	background-color brandColor
	border-radius 2px

.rich-text
	line-height 1.43
	@media tablet_desktop
		font-size 14px
	@media phone
		font-size 16px
		font-weight 200

ul.list-point
.rich-text ul
	padding 0
	margin 0 0 25px
	list-style none
	li
		position relative
		margin-bottom 5px
		&:before
			content ""
			display inline-block
			vertical-align top
			margin 9px 5px 0 25px
			width 3px
			height @width
			border-radius 50%
			background-color siteColor
			@media phone
				margin 9px 10px 0 15px

ol.list-numbers
.rich-text ol
	padding 0
	margin 0 0 25px
	list-style none
	counter-reset list1
	li
		position relative
		margin-bottom 5px
		&:before
			margin-right 5px
			white-space nowrap
			counter-increment list1
			content counter(list1) "."
	ol
		padding 0
		margin 0
		counter-reset list2
		li
			padding-left 25px
			&:before
				border-color transparent
				counter-increment list2
				content: counter(list1) "." counter(list2)
		ol
			padding 0
			margin 0
			counter-reset list3
			li
				padding-left 25px
				&:before
					border-color transparent
					counter-increment list3
					content counter(list1) "." counter(list2) "." counter(list3)
