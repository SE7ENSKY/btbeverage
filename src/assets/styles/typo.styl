h1, h2, h3, h4, h5, h6
	font-weight bold
	text-transform uppercase

h1
	margin 0 0 35px
	font-size 48px
	line-height 1.1
h2
	margin 0 0 20px
	font-size 30px
h3
	margin 0 0 15px
	font-size 20px
h4
	margin 0 0 15px
	font-size 18px
h5
	margin 0 0 15px
	font-size 16px
h6
	margin 0 0 15px
	font-size 14px

p
	margin 0 0 25px

a
	transition .2s color ease-in-out
	&:focus
		outline none

small
	font-size 75%

blockquote
	margin 60px 0
	padding 60px
	border 6px solid #dfeada
	font-size 48px
	line-height 1.1
	text-transform uppercase
	color brandColor
	.slim-wrap &
		margin-left -17%
		margin-right @margin-left
		padding-left calc(17% - 6px)
		padding-right @padding-left

