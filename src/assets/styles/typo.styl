h1, h2, h3, h4, h5, h6
	font-weight bold

h1
	margin 0 0 35px
	font-size 35px
	line-height 1.3
h2
	margin 0 0 20px
	font-size 28px
h3
	margin 0 0 15px
	font-size 20px
h4
	margin 0 0 15px
	font-size 18px
h5
	margin 0 0 15px
	font-size 16px
h6
	margin 0 0 15px
	font-size 14px

p
	margin 0 0 15px

a
	transition .2s color ease-in-out
	&:focus
		outline none

small
	font-size 75%

