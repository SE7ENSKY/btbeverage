.share-box
	margin-bottom 65px
	&__wrap
		display flex
		justify-content center
		margin-bottom 15px
	&__label
		font-size 18px
		color brandColor
		text-transform uppercase
		text-align center
		font-weight bold

	.at
		&-share-btn
			background-color transparent !important
			transform translate3d(0, 0, 0)!important
			&:hover
				transform translate3d(0, -4px, 0)!important
		&-icon
			fill brandColor !important
