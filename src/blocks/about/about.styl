.about
	margin-bottom 80px
	&__inner
		padding-top 140px
	&__title
		font-size calc(1rem + 4vw)
		line-height 1.2
		color brandColor
		text-align center
		text-transform uppercase
		@media tablet_desktop
			margin 0 0 90px
		@media phone
			margin 0 0 30px
		&-row
			display block
			position relative
			&_1
			&_3
				z-index 1
			&_2
				z-index 7
		&-image
			display none
			position fixed
			top calc(50% + 5px)
			left calc(50% + 20px)
			z-index 6
			width 160px
			height 90px
			transform translate(-50%, -100%)rotate(5deg)
			@media (max-height: 650px)
				top 330px
	&__text
		margin 0 auto
		font-size 16px
		line-height 1.4
		color brandColor
		text-align center
		@media tablet_desktop
			width 65%
			font-size 16px
		@media phone
			width 100%
			font-size 14px
		p
			margin 0
	&__list
		display flex
		flex-wrap wrap
		justify-content space-between
		margin-top 450px
		&-item
			width 38%
			text-align center
			margin-bottom 110px
		&-image
			width 65px
			height @width
			display flex
			align-items center
			justify-content center
			margin 0 auto 15px
			will-change transform
			&-i
				max-width 100%
				max-height @max-width
		&-title
			font-size 14px
			line-height 1.285
			color brandColor
			font-weight bold
