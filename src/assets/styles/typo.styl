h1, h2, h3, h4, h5, h6
	font-weight bold
	text-transform uppercase

h1
	margin 0 0 35px
	font-size 48px
	line-height 1.1
h2
	margin 0 0 20px
	font-size 30px
h3
	margin 0 0 15px
	font-size 20px
h4
	margin 0 0 15px
	font-size 18px
h5
	margin 0 0 15px
	font-size 16px
h6
	margin 0 0 15px
	font-size 14px

p
	margin 0 0 25px

a
	transition .2s color ease-in-out
	&:focus
		outline none

small
	font-size 75%

blockquote
	margin 60px 0
	padding 60px
	border 6px solid #dfeada
	font-size 48px
	line-height 1.1
	text-transform uppercase
	color brandColor
	font-weight bold
	.slim-wrap &
		margin-left -17%
		margin-right @margin-left
		padding-left calc(17% - 6px)
		padding-right @padding-left

code
	display inline-block
	margin-bottom 3px
	font-family Menlo, Monaco, Consolas, "Courier New", monospace
	padding 3px 5px
	font-size 80%
	color #fff
	background-color brandColor
	border-radius 2px

.rich-text
	font-size 14px
	line-height 1.43

ul.list-point
.rich-text ul
	padding 0
	margin 0 0 25px
	list-style none
	li
		position relative
		margin-bottom 5px
		&:before
			content ""
			display inline-block
			vertical-align top
			margin 9px 5px 0 25px
			width 3px
			height @width
			border-radius 50%
			background-color siteColor

ol.list-numbers
.rich-text ol
	padding 0
	margin 0 0 25px
	list-style none
	counter-reset list1
	li
		position relative
		margin-bottom 5px
		&:before
			margin-right 5px
			white-space nowrap
			counter-increment list1
			content counter(list1) "."
	ol
		padding 0
		margin 0
		counter-reset list2
		li
			padding-left 25px
			&:before
				border-color transparent
				counter-increment list2
				content: counter(list1) "." counter(list2)
		ol
			padding 0
			margin 0
			counter-reset list3
			li
				padding-left 25px
				&:before
					border-color transparent
					counter-increment list3
					content counter(list1) "." counter(list2) "." counter(list3)